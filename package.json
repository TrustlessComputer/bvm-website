{
  "name": "bvm-website",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "local": "cp ./envs/.env.local .env && next dev",
    "dev": "cp ./envs/.env.develop .env && next dev",
    "ld": "export PORT=3001 && cp ./envs/.env.develop .env  && rm -rf .next && next dev",
    "ls": "export PORT=3002 && cp ./envs/.env.staging .env  && rm -rf .next && next dev",
    "lp": "export PORT=3003 && cp ./envs/.env.production .env  && rm -rf .next && next dev",
    "build": "next build",
    "start": "next start -p 3000",
    "build-stats": "cross-env ANALYZE=true npm run build",
    "clean": "rimraf .next .swc out coverage",
    "lint": "next lint",
    "format": "next lint --fix && prettier '**/*.{json,yaml}' --write --ignore-path .gitignore",
    "check-types": "tsc --noEmit --pretty",
    "test": "jest",
    "commit": "cz",
    "test:e2e": "playwright test",
    "prepare": "husky install",
    "analyze": "ANALYZE=true next build"
  },
  "dependencies": {
    "@chakra-ui/icons": "^2.1.1",
    "@chakra-ui/react": "^2.8.2",
    "@commitlint/cli": "^18.4.3",
    "@dotlottie/react-player": "^1.6.12",
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@next/bundle-analyzer": "^14.0.4",
    "@reduxjs/toolkit": "^2.0.1",
    "framer-motion": "^10.16.16",
    "gsap": "^3.12.4",
    "next": "14.0.4",
    "next-compose-plugins": "^2.2.1",
    "next-plugin-svgr": "^1.1.10",
    "react": "^18",
    "react-device-detect": "^2.2.3",
    "react-dom": "^18",
    "react-player": "^2.14.1",
    "react-redux": "^9.0.4",
    "react-slick": "^0.29.0",
    "react-svg": "^16.1.32",
    "redux-deep-persist": "^1.0.7",
    "redux-persist": "^6.0.0",
    "resolve-url-loader": "^5.0.0",
    "sass": "^1.69.5",
    "sharp": "^0.33.1",
    "slick-carousel": "^1.8.1",
    "split-type": "^0.3.4",
    "svg-react-loader": "^0.4.6",
    "url-loader": "^4.1.1",
    "zustand": "^4.4.7"
  },
  "devDependencies": {
    "@commitlint/cli": "^18.4.3",
    "@commitlint/config-conventional": "^18.4.3",
    "@commitlint/cz-commitlint": "^18.4.3",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@types/react-slick": "^0.23.10",
    "encoding": "^0.1.13",
    "eslint": "^8",
    "eslint-config-next": "14.0.4",
    "husky": "^8.0.3",
    "typescript": "^5"
  }
}
